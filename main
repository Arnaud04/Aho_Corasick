#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define largeur_tab 500
#define hauteur_tab 500

void tri_bulle(char tri[][largeur_tab],int nb_carac_max,int nbmot);
int nbCaracMax(char tab[hauteur_tab][largeur_tab],int nbmot);
void affiche_tableau(char tab[hauteur_tab][largeur_tab] ,int nbmot);
void tri_ahoCorasick(int tabNboccurence[],char myWord[hauteur_tab][largeur_tab],int nbWord,int nbCarWord,char texte[hauteur_tab][largeur_tab],int nbWordTexte,int nbCartext );
int nombreOccurenceCarac(char carac[hauteur_tab][largeur_tab],int caracX,int caracY,char tab[hauteur_tab][largeur_tab],int colonne,int nbMoTab);
int rechercheIndiceCaractere(char tab[hauteur_tab][largeur_tab],char carAchercher,int colonne,int nbmot);



int nombreOccurenceCarac(char carac[hauteur_tab][largeur_tab],int caracX,int caracY,char tab[hauteur_tab][largeur_tab],int colonne,int nbMoTab)
{
    int max=0;

    for(int i=0; i<nbMoTab; i++)
    {
        if (tab[i][colonne] == carac[caracX][caracY])
        {
            max ++;
        }
    }


    return max;
}//renvoie le nombre d'occurence d'un caracteree voulu dans une colonne d'un tableau


int rechercheIndiceCaractere(char tab[hauteur_tab][largeur_tab],char carAchercher,int colonne,int nbmot)
{
    for (int i=0; i<nbmot; i++)
    {
        if(tab[i][colonne] == carAchercher)
            return colonne;
    }
}

